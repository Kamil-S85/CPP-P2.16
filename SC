//This program (2.16) uses floating-point data types

#include <iostream>
#include <string> //required for the string class
using namespace std;

int main()
{
    float distance;
    double mass;
    
    distance = 1.495979e11;
    mass = 1.989E30;
    cout << "The Sun is " << distance << "meters away.\n";
    cout << "The Sun\'s mass is " << mass << "kilograns.\n";
    return 0;
}
